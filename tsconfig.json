{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "baseUrl": ".",
        "moduleResolution": "node",
        "outDir": "dist",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "incremental": true,
        "experimentalDecorators": true
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "src/scripts/track.js"]
}
